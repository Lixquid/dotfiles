## General #####################################################################

font pango:Fira Code, Font Awesome 12

set $mod Mod4
set $config_root ~/.config/i3

set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws0 10

floating_modifier $mod

## Keybinds ####################################################################

bindsym $mod+Up       focus up
bindsym $mod+Right    focus right
bindsym $mod+Down     focus down
bindsym $mod+Left     focus left

bindsym $mod+Shift+Up       move up
bindsym $mod+Shift+Right    move right
bindsym $mod+Shift+Down     move down
bindsym $mod+Shift+Left     move left

bindsym $mod+Control+Up       focus parent
bindsym $mod+Control+Right    focus right
bindsym $mod+Control+Down     focus child
bindsym $mod+Control+Left     focus left

bindsym $mod+g          split h
bindsym $mod+v          split v
bindsym $mod+f          fullscreen
bindsym $mod+Shift+f    floating toggle

bindsym $mod+s          stacking
bindsym $mod+w          layout tabbed
bindsym $mod+e          layout toggle split

# Workspaces
bindsym $mod+1    workspace $ws1
bindsym $mod+2    workspace $ws2
bindsym $mod+3    workspace $ws3
bindsym $mod+4    workspace $ws4
bindsym $mod+5    workspace $ws5
bindsym $mod+6    workspace $ws6
bindsym $mod+7    workspace $ws7
bindsym $mod+8    workspace $ws8
bindsym $mod+9    workspace $ws9
bindsym $mod+0    workspace $ws0

bindsym $mod+Shift+1    move container to workspace $ws1
bindsym $mod+Shift+2    move container to workspace $ws2
bindsym $mod+Shift+3    move container to workspace $ws3
bindsym $mod+Shift+4    move container to workspace $ws4
bindsym $mod+Shift+5    move container to workspace $ws5
bindsym $mod+Shift+6    move container to workspace $ws6
bindsym $mod+Shift+7    move container to workspace $ws7
bindsym $mod+Shift+8    move container to workspace $ws8
bindsym $mod+Shift+9    move container to workspace $ws9
bindsym $mod+Shift+0    move container to workspace $ws0

# Shortcuts
bindsym $mod+Shift+r    restart
bindsym $mod+q          kill
bindsym $mod+Return     exec xfce4-terminal
bindsym $mod+d          exec --no-startup-id i3-dmenu-desktop
bindsym $mod+space      exec --no-startup-id dmenu_run -i

bindsym $mod+b          exec firefox
bindsym $mod+Shift+b    exec firefox --private-window
bindsym $mod+n          exec thunar

# Quickterm; open a terminal, use $mod+Shift+Tab, then $mod+Tab to toggle it
bindsym $mod+Tab          scratchpad show
bindsym $mod+Shift+Tab    \
    floating enable, \
    sticky enable, \
    border pixel 1, \
    move position 0 px 26 px, \
    resize set 100 ppt 20 ppt, \
    move scratchpad, \
    scratchpad show

# Media keys
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl s +10% && $refresh_i3status
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl -n s 10%- && $refresh_i3status

## Resizing ####################################################################

set $resize_menu "RESIZING:    [⯇] Shrink  [⯈] Grow  [⯆] Grow  [⯅] Shrink"
bindsym $mod+r    mode $resize_menu

mode $resize_menu {
    bindsym Up       resize shrink height 10 px or 10 ppt
    bindsym Right    resize grow width 10 px or 10 ppt
    bindsym Down     resize grow height 10 px or 10 ppt
    bindsym Left     resize shrink width 10 px or 10 ppt

    bindsym Shift+Up       resize shrink height 1 px or 1 ppt
    bindsym Shift+Right    resize grow width 1 px or 1 ppt
    bindsym Shift+Down     resize grow height 1 px or 1 ppt
    bindsym Shift+Left     resize shrink width 1 px or 1 ppt

    bindsym Return    mode default
    bindsym Escape    mode default
}

## Power Menu ##################################################################

set $power_menu "POWER:    [L]ogout  [R]eboot  [P]ower Off"
bindsym $mod+Shift+e    mode $power_menu

mode $power_menu {
    bindsym l    exit
    bindsym r    exec reboot
    bindsym p    exec poweroff

    bindsym Return    mode default
    bindsym Escape    mode default
}

## Quick Menu ##################################################################

bindsym $mod+u    exec $config_root/quick_menu.sh

## Status Bar ##################################################################

bar {
    status_command i3status
    position top

    colors {
        background #002b36
        statusline #eee8d5
        separator #586e75
    }
}
